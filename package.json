{
  "name": "advent-of-code",
  "private": true,
  "version": "1.0.2019",
  "description": "My solution of advent of code 2019",
  "main": "index.mjs",
  "type": "module",
  "scripts": {
    "day1": "node -r dotenv/config aoc-2019-day01.js",
    "day2": "node -r dotenv/config aoc-2019-day02.js",
    "day3": "node -r dotenv/config aoc-2019-day03.js",
    "day4": "node -r dotenv/config aoc-2019-day04.js",
    "lint": "eslint-ci day*/*.js",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "engines": {
    "node": ">=13.0.0"
  },
  "author": "Denis Khranovsky <xronosd@gmail.com> (khranovsky.com)",
  "license": "MIT",
  "prettier": {
    "semi": false,
    "useTabs": false,
    "printWidth": 90,
    "tabWidth": 2,
    "singleQuote": true
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/testing/test-bundler.js"
    ],
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "lines": 99.96
      }
    },
    "coverageDirectory": "coverage",
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test).[tj]s?(x)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true
    },
    "globals": {
      "exampleGlobalVariable": false
    },
    "extends": "@logux/eslint-config/node",
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2018
    },
    "rules": {
      "indent": [
        "error",
        2
      ],
      "no-undef": [
        "off"
      ],
      "template-curly-spacing": [
        "off"
      ],
      "prefer-let/prefer-let": [
        "off"
      ],
      "security/detect-non-literal-regexp": "off",
      "security/detect-unsafe-regex": "off",
      "node/no-missing-require": "off",
      "no-unused-expressions": "off",
      "valid-jsdoc": "off",
      "space-before-function-paren": [
        "error",
        {
          "anonymous": "always",
          "named": "never",
          "asyncArrow": "always"
        }
      ],
      "node/no-unsupported-features/node-builtins": "off",
      "node/no-unsupported-features/es-builtins": "off",
      "node/no-unsupported-features/es-syntax": "off",
      "generator-star-spacing": "off",
      "yield-star-spacing": "off"
    },
    "overrides": [
      {
        "files": [
          "gulpfile.js",
          "index.js"
        ],
        "rules": {
          "node/no-unpublished-require": "off",
          "global-require": "off"
        }
      },
      {
        "files": [
          "bin/autoprefixer"
        ],
        "rules": {
          "global-require": "off"
        }
      }
    ]
  },
  "browserslist": [
    "last 2 version",
    "not dead",
    "not Explorer 11",
    "not ExplorerMobile 11",
    "node 13"
  ],
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "loose": true
        }
      ]
    ]
  },
  "dependencies": {
    "@babel/node": "^7.2.2",
    "aoc-loader": "^1.2.0",
    "dotenv": "^6.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@logux/eslint-config": "^28.1.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.7.1",
    "eslint": "^5.16.0",
    "eslint-ci": "^1.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-import-helpers": "^0.1.4",
    "eslint-plugin-jest": "^22.5.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.0",
    "eslit": "^6.0.0",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.5",
    "stream-buffers": "^3.0.2"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "husky": {
    "hooks": {}
  }
}
